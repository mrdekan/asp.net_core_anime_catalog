@{
}
<div class="wrapper">
    <div class="info-block">
        <div class="info-block_main">
            <img src=@Model.Image alt="Image" width="360" />
            <div class="info-block_main_right">
                <h3>@Model.Name</h3>
                <div class="line"></div>
                <p>@Model.Description</p>
                <div class="line"></div>
				<p>@Model.Id</p>
                
				
            </div>
            
        </div>
    </div>
    <main role="main" class="pb-3">
            @RenderBody()
        </main>
    @{
        string[] arr = @Model.SeeasonsAndSeries.Split(' ');
        int season = 1;
        foreach (var element in arr)
        {
            <h4>Season @season</h4>
            season++;
            <div class="season">
            @for (int i = 1; i <= int.Parse(element); i++)
            {
                <a href="#" class="series-button">Series @i</a>
            }
            </div>
        }
    }
	<br />
	<br />
    <br />
    <br />
    <br />
    <br />
</div>

