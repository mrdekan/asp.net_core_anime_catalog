@model AnimesBySearch
@{
	//ViewData["Title"] = "Home Page";
}
<div class="wrapper">
	<h3>Results for "@Model.SearchRequest":</h3>
	<div class="line"></div>
	<div class="section">
		@if (Model.Animes.Count() == 0)
		{
			<h3>Nothing found</h3>
		}
		@for (int i = 0; i < Model.Animes.Count(); i++)
		{
			var item = Model.Animes.ElementAt(i);
			<div class="poster">
				<div class="poster_content">
					<div class="image">
						<img src="@item.Image" width="100%" height="315" alt="Image" />
						<p>@Math.Round(item.Mark,1)/10</p>
					</div>
					<div>
						<a asp-controller="Anime" asp-action="Detail" asp-route-id=@item.Id class="title">@item.Name</a>
						<span>@item.Description</span>
						@{
							string[] arr = item.Tags.Split(' ');
							<div class="tags">
								@foreach (string temp in arr)
								{
									<a asp-controller="Anime" asp-action="Tag" asp-route-tag=@temp class="tag">@temp.Replace("_", " ")</a>
								}
							</div>
						}
					</div>
				</div>
			</div>
		}
	</div>
</div>